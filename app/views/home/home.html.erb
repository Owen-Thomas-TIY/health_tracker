<h1>Home#home</h1>
<p>Find me in app/views/home/home.html.erb</p>

<%= link_to 'Weight', weights_path %>
<%= link_to 'Steps', steps_path %>
<%= link_to 'Calories', calories_path %>
<%= link_to 'Exercises', exercises_path %>

<p>
  <% if @calories_burned.blank? %>
    Go workout.
  <% else %>
    Total Calories Burned <%= @calories_burned %>
  <% end %>
</p>

<p>
  <% if @calories_consumed.blank? %>
    Go eat.
  <% else %>
    Total Calories Consumed <%= @calories_consumed %>
  <% end %>
</p>

<p>
  <% if @calories_consumed && @calories_burned %>
    Net Calories <%= @net_calories %>
  <% end %>
</p>
